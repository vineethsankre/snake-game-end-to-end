pipeline {
    agent any

    environment {
        AWS_CREDS = credentials('aws-jenkins-creds')
    }

    stages {
        stage('Checkout') {
            steps { git 'https://github.com/Jithendarramagiri1998/snake-game.git' }
        }

        stage('Terraform Init') {
            steps {
                sh '''
                terraform init
                '''
            }
        }

        stage('Terraform Plan') {
    steps {
        dir('terraform-eks') {
            sh '''
                terraform init
                terraform plan
            '''
        }
    }
}

        stage('Terraform Apply') {
            steps {
                sh '''
                terraform apply -auto-approve
                '''
            }
        }
    }
}

