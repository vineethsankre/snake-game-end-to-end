pipeline {
    agent any

    environment {
        AWS_CREDS = credentials('aws-jenkins-creds')
    }

    stages {

        stage('Checkout Repo') {
            steps {
                git 'https://github.com/Jithendarramagiri1998/snake-game.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform-eks') {
                    sh 'echo "Current dir:" && pwd'
                    sh 'echo "List files:" && ls -l'
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform-eks') {
                    sh 'echo "Current dir:" && pwd'
                    sh 'echo "List files:" && ls -l'
                    sh 'terraform plan'
                }
            }
        }

    }
}
